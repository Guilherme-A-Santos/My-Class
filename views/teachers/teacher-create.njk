{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/teachers.css">
{% endblock styles %}

{% block title %}
    <title>Cadastrar um professor(a) - My Class</title>
{% endblock title %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar"></section>

        <section class="details">

            <h3>Novo(a) professor(a)</h3>

            <div class="description">
                <div>Foto de perfil</div>
                <div>
                    <input type="url" name="avatarUrl" placeholder="http://">
                </div>
            </div>

            <div class="description">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Digite o nome aqui">
                </div>
            </div>

            <div class="description">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="description">
                <div>Data de nascimento</div>
                <div>
                    <span class="radio"><input type="radio" name="gender" value="M" checked>Masculino</span>
                    <span class="radio"><input type="radio" name="gender" value="F">Feminino</span>
                    <span class="radio"><input type="radio" name="gender" value="NB">Não Binário</span>
                </div>
            </div>

            <div class="description">
                <div>Grau de escolaridade</div>
                <div>
                    <select class="selectHole">
                        <option name="graduation" value="ensinoMedio">Ensino Médio Completo</option>
                        <option name="graduation" value="ensinoSuperior">Ensino Superior Completo</option>
                        <option name="graduetion" value="mestrado">Mestrado</option>
                        <option name="graduetion" value="doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="description">
                <div>Tipo de aula</div>
                <div>
                    <span class="radio"><input type="radio" name="teachingMethod" value="attending" checked>Presencial</span>
                    <span class="radio"><input type="radio" name="teachingMethod" value="distance">EAD</span>
                </div>
            </div>

            <div class="description">
                <div>Disciplinas</div>
                <div>
                    <input type="text" name="services" placeholder="Digite as disciplinas, separadas por virgula.">
                </div>
            </div>

            <button type="submit">Cadastrar</button>

        </section>
    </form>
{% endblock content %}
