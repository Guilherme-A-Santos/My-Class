{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/teachers.css">
{% endblock styles %}

{% block title %}
    <title>Editar professor(a) - My Class</title>
{% endblock title %}

{% block content %}
    <form class="card" method="POST" action="/teachers">

        <section class="avatar" style="background: url({{ teacher.avatarUrl }}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Novo(a) professor(a)</h3>

            {% include "partials/teacher-fields.njk" %}

            <button type="submit">Salvar</button>

        </section>

    </form>
{% endblock content %}
