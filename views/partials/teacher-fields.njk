<div class="description">
    <div>Foto de perfil</div>
    <div>
        <input type="url" name="avatarUrl" placeholder="http://">
    </div>
</div>

<div class="description">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="Digite o nome aqui">
    </div>
</div>

<div class="description">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth">
    </div>
</div>

<div class="description">
    <div>Data de nascimento</div>
    <div>
        <span class="radio"><input type="radio" name="gender" value="M" checked>Masculino</span>
        <span class="radio"><input type="radio" name="gender" value="F">Feminino</span>
        <span class="radio"><input type="radio" name="gender" value="NB">Não Binário</span>
    </div>
</div>

<div class="description">
    <div>Grau de escolaridade</div>
    <div>
        <select class="selectRole" name="graduation">
            <option value="Ensino Médio">Ensino Médio Completo</option>
            <option value="Ensino Superior">Ensino Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="description">
    <div>Tipo de aula</div>
    <div>
        <span class="radio"><input type="radio" name="teachingMethod" value="attending" checked>Presencial</span>
        <span class="radio"><input type="radio" name="teachingMethod" value="distance">EAD</span>
    </div>
</div>

<div class="description">
    <div>Disciplinas</div>
    <div>
        <input type="text" name="services" placeholder="Digite as disciplinas, separadas por virgula.">
    </div>
</div>
